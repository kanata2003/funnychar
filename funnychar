  1F150@ğŸ…ğŸ…‘ğŸ…’ğŸ…“ğŸ…”ğŸ…•ğŸ…–ğŸ…—ğŸ…˜ğŸ…™ğŸ…šğŸ…›ğŸ…œğŸ…ğŸ…ğŸ…ŸğŸ… ğŸ…¡ğŸ…¢ğŸ…£ğŸ…¤ğŸ…¥ğŸ…¦ğŸ…§ğŸ…¨ğŸ…©abcdefghijklmnopqrstuvwxyz
  1F170@ğŸ…°ğŸ…±ğŸ…²ğŸ…³ğŸ…´ğŸ…µğŸ…¶ğŸ…·ğŸ…¸ğŸ…¹ğŸ…ºğŸ…»ğŸ…¼ğŸ…½ğŸ…¾ğŸ…¿ğŸ†€ğŸ†ğŸ†‚ğŸ†ƒğŸ†„ğŸ†…ğŸ††ğŸ†‡ğŸ†ˆğŸ†‰abcdefghijklmnopqrstuvwxyz
  1F1E6@ğŸ‡¦ğŸ‡§ğŸ‡¨ğŸ‡©ğŸ‡ªğŸ‡«ğŸ‡¬ğŸ‡­ğŸ‡®ğŸ‡¯ğŸ‡°ğŸ‡±ğŸ‡²ğŸ‡³ğŸ‡´ğŸ‡µğŸ‡¶ğŸ‡·ğŸ‡¸ğŸ‡¹ğŸ‡ºğŸ‡»ğŸ‡¼ğŸ‡½ğŸ‡¾ğŸ‡¿abcdefghijklmnopqrstuvwxyz
)
TABLESIZE="${#TABLE[@]}"

# String substitution
# Specifications : A..Za..z is 52 characters, 52 replacement characters must be set in the argument.
# ä»•æ§˜: A..Za..zãŒ52æ–‡å­—ã§ã™ã€‚52æ–‡å­—ã®ç½®æ›æ–‡å­—ãŒå¼•æ•°ã§è¨­å®šã•ã‚Œã¦ã„ã‚‹å¿…è¦ãŒã‚ã‚Šã¾ã™ã€‚
make_funny(){
  local alp
  if [ "${#1}" = 52 ]
  then
    alp="$(echo {A..Z} {a..z} | tr -d \ )"
    sed "y/$alp/$1/"
  else
    help 1 ""
  fi
}

# Set translation rule for -u option
get_u52(){
  local ten c_range
  if echo "$1" | grep -qP '^U\+[A-F0-9]+$'
  then
    :
  else
    help 1 "Arg -u($1) is invalid. ex) U+XXXX"
  fi
  ten="$(echo -n "$1" | sed 's/^U+/0x/' | xargs printf %d)"
  c_range="${ten}..$((ten+51))"
  echo -e "$(
    eval echo '{'"${c_range}"'}' |
    xargs printf %x\ | sed 's/ $//' | sed 's/^\| /\\U/g'
  )"
}

# Set translation rule for -p option
get_p52(){
  local t
  if { echo -e "$1" | grep -qP '^\d+$' &&
       [ 0 -lt "$1" ] && [ "$1" -le "$TABLESIZE" ];}
  then
    t="${TABLE[$1-1]}"
    echo -n "${t//*@/}"
  else
    help 1 "Arg -p($1) is invalid. 1<=[-p arg]<=${TABLESIZE}"
  fi
}

help(){
  if { [ "$1" = 1 ] && [ -n "$2" ];}
  then
    echo "Error: $2">&2
  fi
  echo "ex) echo abcABC|$0 -u U+1D468"
  echo "ex) $0 -p [pattern_number] abcABC"
  echo "    pattern_number is .."
  local i c t
  i=1
  for t in ${TABLE[*]}
  do
    c="$(echo "${t//*@/}" | tr -d '[:lower:]')"
    p="${t//@*/}"
    if [ "${#c}" = 52 ]
    then
      echo "    $((i++))) $p #${c:0:3}${c:26:3}"
    elif [ "${#c}" = 26 ]
    then
      echo "    $((i++))) $p #${c:0:3}"
    fi
  done
  exit "$1"
}

# Print version and exit
version(){
  echo "$VERSION_INFO"
  exit 0
}

main(){
  args=$(getopt -o u:p:hv -- "$@") || help 1 "Failed to parse args."
  eval "set -- $args"

  local U P
  while [ $# -gt 0 ]; do
    case "$1" in
      -u) U="$2" ; shift 2 ;;
      -p) P="$2" ; shift 2 ;;
      -h) help 0 ; break   ;;
      -v) version; break   ;;
      --) shift  ; break   ;;
    esac
  done

  if {
       { [ -n "$U" ] && [ -n "$P" ];} ||
       { [ -z "$U" ] && [ -z "$P" ];}
     }
  then
    help 1 'Specify either -u or -p.'
  fi

  # Get translation rule
  if [ -n "$U" ]
  then
    RULE="$(get_u52 "$U")"
  elif [ -n "$P" ]
  then
    RULE="$(get_p52 "$P")"
  fi

  # bash version check
  [[ ${BASH_VERSION::1} < 4 ]] && {
    echo 'You need to have bash v4 or above to use this tool.' >&2
    exit 1
  }

  # Translation
  if [ -p /dev/stdin ]
  then
    # From pipe
    make_funny "$RULE" < /dev/stdin
  elif [ $# -ne 0 ]
  then
    # From args
    echo "$@" | make_funny "$RULE"
  else
    # From keyboard
    make_funny "$RULE" < /dev/stdin
  fi
}

main "$@"
exit "$?"
